<% @users = User.new unless @users %>
<div class="info">
<h2>スケジュール新規投稿</h2>
<div class = form-error>
<% @users.errors.full_messages.each do |message| %>
<p class="error"><%= message %></p>
<%end%>
</div>
</div>
<%= form_with medel:@users do |f| %>
<table>
<tr>
<th><%= f.label :title ,"タイトル" %></th>
<td><%= f.text_field :title %></td>
</tr>

<tr>
<th><%= f.label :start ,"開始日" %></th>
<td><%= f.date_field :start %></td>
</tr>

<tr>
<th><%= f.label :end ,"終了日" %></th>
<td><%= f.date_field :end %></td>
</tr>

<tr>
<th><%= f.label :allday,"終日" %></th>
<td><%= f.check_box :allday, :as=>:boolean%>
終日の場合はチェックを入れます。
</td>
</tr>

<tr>
<th><%= f.label :memo,"スケジュールメモ" %></th>
<td><%= f.text_area :memo %></td>
</tr>
</table>

<ul>
<li><%= f.submit "スケジュールを新規登録する" %></li> 
<li><%= link_to("スケジュール一覧に戻る","/posts/index")%></li>
</ul>
<% end %>